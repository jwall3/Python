#Defining theta for rotation around x,y z.
def theta():            

    
    c=0
    global thetasxy
    global thetasz
    thetasxy = []
    thetasz = []
    
    for p in genplot:
            i = (genplot[c])
            xa = ((i[0]/2)*size)
            ya = ((i[1]/2)*size)
            za = ((i[2]/2)*size)
            thetaxy = math.atan2(ya,xa)
            thetasxy.append(thetaxy)
            
            sxy = math.sqrt(xa**2 + ya**2)
            thetaz = math.atan2(sxy,za)
            thetasz.append(thetaz)

            c+=1
    global thetas      
    thetas = (thetasxy, thetasz)        
    return thetas
    #print("THIS IS THETAS",thetasxy)




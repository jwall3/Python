                thetaINITz = math.atan2(zold,sxy)
            
                rd = (math.sqrt(xold**2 + yold**2 + zold**2))
                #rd = 7
                
                #Rotation
                ThetaFinalxy = thetaINITxy + thetasxy[c1]
                ThetaFinalz = thetaINITz + thetasz[c1]
                
                
                #Spherical to Catersian
                Xfinal = (rd*math.cos(ThetaFinalxy))+(rd*math.sin(ThetaFinalxy))
                Xfinal = Xfinal + (rd*math.cos(ThetaFinalxy))- (rd*math.cos(ThetaFinalxy))
                Yfinal = (rd*math.sin(ThetaFinalxy))+(rd*math.cos(ThetaFinalxy))
                Zfinal = rd*-math.sin(ThetaFinalz) +rd*math.cos(ThetaFinalz)

                      
            #Appened to the list 
            
                xfinals.append(Xfinal)
                yfinals.append(Yfinal)
                zfinals.append(Zfinal)
    
    
